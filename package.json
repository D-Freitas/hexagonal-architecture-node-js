{
  "name": "hexagonal-architecture",
  "version": "1.0.0",
  "main": "main/main.ts",
  "author": "Davi Freitas",
  "license": "ISC",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 src/externals/web",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --maxWorkers=50%",
    "test:verbose": "npm run test -- --verbose",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm run test -- --coverage",
    "test:integration": "npm t -- -c ./jest.integration.config.js",
    "test:external": "npm run test -- -c ./jest.integration.config.js"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.2",
    "module-alias": "^2.2.2",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13"
  }
}
